<%= form_for @pic do |f| %>


  <% if @pic.errors.any? %>
    <h2> Errors </h2>
    <ul>
      <% @pic.errors.full_messages.each do |message| %>

    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= f.label :date %>
<%= f.datetime_field :date %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.submit %> | <%= link_to "Cancel", pics_path %>

<% end %>
