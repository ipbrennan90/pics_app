<%= form_for @pic do |f| %>
<h2> Errors </h2>

<% if @pic.errors %>
  <ul>
    <% @pic.full_error_messages.each do |message| %>

    <li><%= message %><li>
    <% end %>
  </ul>
<% end %>
  

<%= f.label :date %>
<%= f.date_field :date %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.submit %> | <%= link_to "Cancel", pics_path %>

<% end %>
